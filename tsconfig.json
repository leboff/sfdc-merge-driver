{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./lib",
    "resolveJsonModule": true,
    "rootDirs": [
      "./src"
    ],
    "strict": false,
    "strictFunctionTypes": false,
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
